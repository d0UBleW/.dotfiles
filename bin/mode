#!/usr/bin/env bash

if [[ "$1" == "light" ]]; then
    alacritty-theme tokyonight-day
    rofi-theme light
    xresources-theme light
    feh --bg-fill $HOME/wallpapers/tokyoday-3.jpg
    hlwm-theme light
elif [[ "$1" == "dark" ]]; then
    alacritty-theme tokyonight-storm
    rofi-theme dark
    xresources-theme dark
    feh --bg-fill $HOME/wallpapers/tokyonight.jpeg
    hlwm-theme dark
else
    exit 1
fi

echo "$1" > $HOME/.theme
